.form-wrap.login
  .this-form
    .form-head
      %p.mb-3= 'Forgot your password?'
    .form-body
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = f.error_notification
        .form-inputs
          .form-label-group.mb-3
            %label{:for => "user_email"} Email address
            = f.input :email, required: true, label: false, autofocus: true, input_html: { autocomplete: "email", class: 'form-control' }
        .form-actions.pt-3
          = f.button :submit, "Send me instructions", class: 'btn btn-md btn-block btn-submit'
      - if controller_name != 'sessions'
        %p.other-action.mt-3
          = 'Or remembered?'
          = link_to "Sign in", new_session_path(resource_name)
          = 'to reach your road.'







