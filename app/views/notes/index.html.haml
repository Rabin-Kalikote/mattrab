#notes
  .container
    %h3.title= 'Trending Notes'
    .row.flex-grid
      - @notes.each do |note|
        .col-md-4.col-lg-3
          .note
            = link_to (image_tag note.image.url(:small)), note, class: 'img-note'
            .note_content
              %p.info.mb-2
                = note.user.name
                = 'â€¢'
                = 'Science'
              %h2.title= link_to note.title, note
              %p.body
                = truncate(simple_format(note.body), :length => 150)
              %p.buttons
                %span
                  %i.fa.fa-comments-o
                  = pluralize(note.comments.count, "Comment")
                %span
                  %i.fa.fa-thumbs-o-up
                  = pluralize(note.get_upvotes.size, "Like")
                %span
                  %i.fa.fa-eye
                  = pluralize(note.view, "View")
