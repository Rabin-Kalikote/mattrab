%hr
.question.mt-4.mb-2{:id => "question-#{question.id}"}
  .col-md-12
    .avatar.d-inline
      = image_tag question.user.avatar.url(:small)
    .body.d-inline.ml-1
      = link_to question.user.name, question.user, class: 'username'
      %span.at
        = 'asked'
        = time_ago_in_words(question.created_at)
        ago
    - if can? :destroy, question
      = link_to 'Delete thread', note_question_path(@note, question), method: :delete, remote: true, class: 'btn-delete pull-right'
  .col-md-12.q-content
    %p.content.my-2= question.content
